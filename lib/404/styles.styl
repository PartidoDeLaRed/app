body.not-found
  background-color: #3498db
  
  #content
    background-color: #3498db

  .app-header,
  .snap-drawers
    display: none

  #content-404
    width: 430px
    margin: 0 auto
    padding-top: 100px
    overflow: hidden

    img
      max-width: 100px
      margin: 0 auto
      display: block

    .note
      text-align: center
      font-size: 80px
      color: #ecf0f1
    
    h1
      text-align: center
      color: #ecf0f1
      margin: 0 auto

    .goback
      text-align: center
      margin-top: 20px
      color: #ecf0f1
      font-weight: bold

      a, a:hover
        color: #2a6496

      a:hover
        text-decoration: underline

@media only screen and (max-width: 700px)
  body.not-found
    
    .app-header,
    .snap-drawers
      display: none

    #content
      background-color: #3498db
      margin-top: -60px

      #content-404
        width: 90% !important
        padding-top: 15% !important