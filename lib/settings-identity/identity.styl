@keyframes rotate
  from
    transform: rotate(0deg)
  to
    transform: rotate(360deg)

.start-container 
  width: 100%
  text-align: center
  position: relative

  .btn-success.btn-start
    width: auto
    margin: 0 auto
    transition: background-color 0.5s ease
    border: 2px solid #27ae60

    &.on
      background-color: #fff
      color: #27ae60
      border: 2px solid #27ae60
      cursor: default

  .verified,
  .loading
    color: #27ae60
    position: absolute
    top: 12px
    right: 24%

  .loading
    animation-name: rotate
    animation-duration: 1.2s
    animation-iteration-count: infinite
    transition-animation-timing-function: linear

.identity-status
  margin-top: 12px

  .status
    font-weight: bold
    margin-left: 4px
    text-transform: uppercase