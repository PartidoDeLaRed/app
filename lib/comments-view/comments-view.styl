/* Vars
-------------------------------------------------- */
:root
  var-header_height: 60px
  var-spacing: 20px
  var-border_radius: 3px
  var-nav_proposal_width: 266px
  var-content_width: 580px
  var-link_blue: #2980b9

/* Comments
-------------------------------------------------- */
.comments
  background: #f9f9f9
  padding-top: 50px
  padding-bottom: 50px

  .markdown
    padding: 0
    margin-top: 10px
    margin-bottom: 10px

  .comments-inner
    margin: auto
    max-width: var(content_width)

  h4
    margin-bottom: 30px

  span
    margin-right: 20px

  .comment-form
    margin-bottom: 50px
    margin-top: 50px
    textarea
      max-width: 540px
      width: 100%
      padding: 2%
    .btn
      background-color: #333
      color: white

  .comment-list
    .comment-item
      max-width: 580px
      padding: 12px 10px 0px 10px
      &.remove
        .btn-remove
          display: none
        .comment-text
          color: #bdc3c7
        .remove-comment
          display: block
        .comment-actions
          display: none

      .edited
        margin-right: 3px

      .pull-left
        width: 46px
        margin-right: 20px
        .avatar
          width: 46px
          height: 46px
          border-radius: 100px

      .media-body
        position: relative
        min-height: 76px

        .comment-edit-form
          display: none

        &.edit
          .comment-body
            display: none
          .comment-edit-form
            display: block

      .comment-action
        color: #333
        font-size: 11px
        font-weight: bold
        color: #333
        &.vote-comment
          i
            font-weight: bold
            font-size: 20px
            margin-right: 10px
        &:hover
          text-decoration: none
        &.link-report,
        &.link-remove,
        &.link-edit
          float: right
          color: #333
          i
            margin-right: 5px
      .comment-counter
        margin: 0px
        font-weight: bold
        font-size: 14px
        color: #333
        vertical-align: top
        min-width: 20px
        display: inline-block
      .spam-message
        display:none
        .show-spam
          margin: 0px 3px
          font-size: 0.85em

      .comment-text
        color: #333

      .oncomment
        background-color: rgba(249, 249, 249, 0.5)
        display: none
        font-weight: bold
        height: 100%
        left: 0
        padding-top: 15px
        position: absolute
        text-align: center
        top: 0
        width: 100%

        a
          display: inline-block
          margin-right: 12px
        
        &.message
          cursor: default

      .comment-action
        &.like
          &.selected, &:hover
            color: green
        &.dislike
          &.selected, &:hover
            color: red
        &.flag
          display: inline-block
          &.selected, &:hover
            color: orange
        &.btn-remove
          display: inline-block
          &:hover
            color: #c0392b
        &.btn-edit
          display: inline-block
          &:hover
            color: #f39c12
      &.spam
        .comment-text, .comment-actions, .link-report.flag
          display:none
        .spam-message
          display:block